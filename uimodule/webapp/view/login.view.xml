 <mvc:View controllerName="claims.Entrego.view.login"
  displayBlock="true"
	xmlns="sap.m"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:tnt="sap.tnt"
	xmlns:html="http://www.w3.org/1999/xhtml">
  <App id="idAppControl" >
   <Page showHeader="false">
      <content>
        <VBox fitContainer="true" justifyContent="Center" alignItems="Center" alignContent="Center">
          <items>
            <Image src="./resources/img/logo.png"/>
          </items>
          <items>
            <Input id="Username" placeholder="User Name"></Input>
            <Input id="Password" placeholder="Password" type="Password"></Input>
            <Button press="onMain" width="11rem" text="Login" type="Emphasized" icon="sap-icon://visits"/>
             <Link id="linkid" text="No Account? Register Here" press="onPressRegister" />
            <Label text="V 0.1"/>
          </items>
        </VBox>
      </content>
    </Page>
  </App>
</mvc:View>
